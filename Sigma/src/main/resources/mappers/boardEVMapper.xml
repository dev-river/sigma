<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.mapper.boardEV">
	<select id="EVlist" resultType="kr.co.domain.boardEVVO">
		select * from boardEV order by num desc
	</select>
	
	<insert id="EVinsert">
		insert into boardEV values((select nvl2(max(num), max(num)+1, 1) from boardEV), #{title}, #{content}, #{writer}, sysdate, sysdate, 0, null, 0)
	</insert>
	
	<select id="EVread" resultType="kr.co.domain.boardEVVO">
		select * from boardEV where num = #{num}
	</select>
	
	<update id="addEVviewcnt">
		update boardEV set viewcnt = viewcnt + 1 where num=#{num}
	</update>
	
	<select id="EVupdateUI" resultType="kr.co.domain.boardEVVO">
		select * from boardEV where num = #{num}
	</select>
	
	<update id="EVupdate">
		update boardEV set writer=#{writer}, title=#{title}, content=#{content} where num=#{num}
	</update>
	
	<delete id="EVdelete">
		delete from boardEV where num=#{num}
	</delete>
	
	<!-- =============================================================================================================================================== -->
	
	<!-- 페이징처리 부분 -->
	
	<select id="getAmount" resultType="Integer">
		select count(num) from boardEV
	</select>
	
	<select id="pageList" resultType="kr.co.domain.boardEVVO">
		<![CDATA[
		select * from 
		(select rownum rnum, num, title, writer, updatedate, viewcnt from 
		(select * from boardEV order by num desc)) where rnum between #{startNum} and #{endNum}
		]]>
	</select>
	
